@model PaginationViewModel

<nav aria-label="...">
    <ul class="pagination">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : string.Empty)">
            <a class="page-link" asp-controller="Requests" asp-action="GetAll" asp-route-page="@Model.PrevPage" asp-route-status="@ViewData["status"]" tabindex="-1" aria-disabled="true">Previous</a>
        </li>

        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)" aria-current="page">
                <a class="page-link" asp-controller="Requests" asp-action="GetAll" asp-route-page="@i" asp-route-status="@ViewData["status"]">@i</a>
            </li>
        }

        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty)">
            <a class="page-link" asp-controller="Requests" asp-action="GetAll" asp-route-page="@Model.NextPage" asp-route-status="@ViewData["status"]" tabindex="-1" aria-disabled="true">Next</a>
        </li>
    </ul>
</nav>