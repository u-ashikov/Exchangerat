@model AllRequestsOutputModel

@{
    ViewBag.Title = "Requests";
}

<h1 class="text-center">Requests</h1>
<hr />

@if (Model == null || Model.Requests?.Count == default)
{
    <div class="alert alert-warning" role="alert">
        Sorry, there are no requests found.
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Type</th>
                <th scope="col">Status</th>
                <th scope="col">Issued At</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model.Requests)
            {
                <tr>
                    <td>@request.Id</td>
                    <td>@request.RequestType</td>
                    <td>@request.Status</td>
                    <td>@request.IssuedAt.ToShortDateString()</td>
                    <td>
                        <a asp-area="" asp-controller="Requests" asp-action="#">Action</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}