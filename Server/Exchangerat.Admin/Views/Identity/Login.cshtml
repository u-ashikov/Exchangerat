@model Exchangerat.Admin.Models.Identity.LoginFormModel

@{
    ViewBag.Title = "Login";
}

<h1 class="text-center display-4">@ViewBag.Title</h1>

<form method="post" asp-controller="Identity" asp-action="Login" class="col-md-6 mx-auto my-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Username" class="h6">Username</label>
        <input asp-for="Username" class="form-control" placeholder="Enter username">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="h6">Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
